<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/alerts.css">
    <script src="https://kit.fontawesome.com/a54879e6c0.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;1,300&display=swap"
        rel="stylesheet">
    <title>Listado de clientes</title>
</head>

<body>
    <header>
        <div class="container">
            <div class="nav-bar">
                <div class="img">
                    <img src="/img/logo.jpeg" class="logo" alt="Logo miscelanea esmeralda">
                </div>

                <nav>
                    <ul>
                        <li>
                            <a href="#">Inicio</a>
                        <li>
                            <a href="#">Adminsitración de usuarios</a>
                        </li>

                        <li>
                            <a href="#">Ventas</a>
                        </li>

                        <li>
                            <a href="#">Finanzas</a>
                        </li>
                    </ul>

                </nav>
            </div>
        </div>
    </header>

</body>
    <div class="container">
        <h1>Lista de Productos</h1>

        <table>
            <thead>
                <tr>
                    <th>idProducto</th>
                    <th>idProveedor</th>
                    <th>Descripción</th>
                    <th>Precio de compra</th>
                    <th>Precio de venta</th>
                    <th>Entradas</th>
                    <th>Salidas</th>
                    <th>Existencias</th>
                    <th>Código de Barras</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <% if (products) { %>
            <tbody>
                <% for (var i=0; i < products.length; i++) { %>
                <tr>
                    <td><%= products[i].idProducto %></td>
                    <td><%= products[i].idProveedor %></td>
                    <td><%= products[i].nombreArticulo %></td>
                    <td><%= products[i].precioCompra %></td>
                    <td><%= products[i].precioVenta %></td>
                    <td><%= products[i].entradas %></td>
                    <td><%= products[i].salidas %></td>
                    <td><%= products[i].existencias %></td>
                    <td><%= products[i].codigoBarras %></td>
                    <td>
                        <a href="/api/employee/delete-employee/<%= products[i].idProducto%>" class="btn btn-danger">Eliminar</a>
                        <a href="/api/employee/update-employee/<%= products[i].idProducto%>" class="btn-update">Actualizar</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
            <% } %>
        </table>
    </div>
</html>